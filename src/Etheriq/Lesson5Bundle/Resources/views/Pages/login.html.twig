{% extends 'EtheriqLesson5Bundle::index.html.twig' %}

{% block title %}
    Авторизация на сайте
{% endblock title %}

{% block body %}

    <div class="well span4 offset4">
        <legend>Вход на сайт</legend>
        <form method="post" accept-charset="utf-8" action="">
            <input type="text" class="span4" name="login" placeholder="Введите логин">
            <input type="password" class="span4" name="password" placeholder="Введите пароль">
            <button type="submit" name="enterToSite" class="btn btn-block btn-success">Войти</button>
        </form>
        <a href="#" class="pull-left">Забыли пароль?</a>
        <a href="#" class="pull-right">Зарегистрироваться</a>
    </div>

{% endblock body %}

{% block stylesheets %}
    <style>
        .well {
            margin-top: 120px;
        }
    </style>
{% endblock %}
